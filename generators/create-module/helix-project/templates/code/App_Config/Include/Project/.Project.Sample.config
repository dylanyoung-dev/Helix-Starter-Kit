<?xml version="1.0"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <events>
      <event name="publish:end">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <site hint="<%= Parameters.ModuleName.toLowerCase() %>"><%= Parameters.ModuleName.toLowerCase() %></site>
          </sites>
        </handler>
      </event>
      <event name="publish:end:remote">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <site hint="<%= Parameters.ModuleName.toLowerCase() %>"><%= Parameters.ModuleName.toLowerCase() %></site>
          </sites>
        </handler>
      </event>
    </events>
    <sites>
      <site name="<%= Parameters.ModuleName.toLowerCase() %>" patch:after="site[@name='modules_website']"
                  targetHostName="$(rootHostName)"
                  database="web"
                  virtualFolder="/"
                  physicalFolder="/"
                  rootPath="/sitecore/content/<%= Parameters.ModuleName.toLowerCase() %>"
                  startItem="/Home"
                  domain="sitecore"
                  allowDebug="true"
                  htmlCacheSize="50MB"
                  registryCacheSize="0"
                  viewStateCacheSize="0"
                  xslCacheSize="25MB"
                  filteredItemsCacheSize="10MB"
                  enablePreview="true"
                  enableWebEdit="true"
                  enableDebugger="true"
                  disableClientData="false"
                  enableItemLanguageFallback="true"
                  dictionaryDomain="dictionary"
        <patch:attribute name="cacheHtml">true</patch:attribute>
      </site>

    </sites>
    <cacheSizes>
      <sites>
        <glhomes>
          <html>50MB</html>
          <registry>0</registry>
          <viewState>0</viewState>
          <xsl>25MB</xsl>
        </glhomes>
      </sites>
    </cacheSizes>
    <settings>
      <setting name="Preview.DefaultSite">
        <patch:attribute name="value" value="<%= Parameters.ModuleName.toLowerCase() %>" />
      </setting>
    </settings>
  </sitecore>
</configuration>